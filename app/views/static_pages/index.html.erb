<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="col-sm-8">
        <h1>Bacon <small>is yummy</small></h1>
      </div>
      <div class="col-sm-4">
        <img src="http://baconmockup.com/300/200/" class="img-rounded" />
      </div>
    </div>
  </div>
  <h2>This is a way for me to learn Bootstrap.</h2>
  <p>
    <%= @opening %>
  </p>
  <h2>Tabular bacon</h2>
  <table class="table">
    <tr>
      <th>
        Bacon
      </th>
      <th>
        Bacon 2
      </th>
      <th>
        Bacon 3
      </th>
    </tr>
    <tr>
      <td>
        Smoked
      </td>
      <td>
        Sliced
      </td>
      <td>
        Rasher
      </td>
    </tr>
  </table>
  <h2>Bacon buttons</h2>
  <button class="btn btn-lg btn-primary" data-toggle="collapse" data-target="#demo">Want more bacon?</button>

  <div id="demo" class="collapse">
    <p>
      <%= @opening %>
    </p>
    <p>
      <%= @second %>
    </p>
  </div>
  <h2>Bacon images</h2>
  <div id='baconCarousel' class='carousel slide' data-ride='carousel'>
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#baconCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#baconCarousel" data-slide-to="1" class="active"></li>
      <li data-target="#baconCarousel" data-slide-to="2" class="active"></li>
    </ol>
    <!-- Slide wrapper -->
    <div class="carousel-inner">
      <div class="item active">
        <img class="img-responsive center-block" src="http://baconmockup.com/400/300/" />
        <div class="carousel-caption">
          <p>
            <%= @caption_a %>
          </p>
        </div>
      </div>
      <div class="item">
        <img class="img-responsive center-block" src="http://baconmockup.com/500/300/" />
        <div class="carousel-caption">
          <p>
            <%= @caption_b %>
          </p>
        </div>
      </div>
      <div class="item">
        <img class="img-responsive center-block" src="http://baconmockup.com/300/300/" />
        <div class="carousel-caption">
          <p>
            <%= @caption_c %>
          </p>
        </div>
      </div>

    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#baconCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#baconCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
